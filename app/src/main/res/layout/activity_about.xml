<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.qsxuan.recentcontests.activity.AboutActivity"
        android:elevation="15dp"
        >

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dataSource"
            android:textAlignment="center"
            tools:text="@string/data_source"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <TextView
            android:text="Author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/authorTitle"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="normal|bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/authorView"
            android:layout_marginTop="23dp"
            tools:text="@string/author"
            android:textAlignment="center"
            android:layout_below="@+id/authorTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/blogView"
            android:gravity="center_horizontal"
            android:textSize="14sp"
            tools:text="@string/blog"
            android:layout_below="@+id/authorView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <TextView
            android:text="DataSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dataSourceTitle"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="normal|bold"
            android:layout_marginBottom="27dp"
            android:layout_above="@+id/dataSource"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/github"
            android:textAlignment="center"
            tools:text="@string/GitHub"
            android:layout_marginBottom="76dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <TextView
            android:text="GitHub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/githubTitle"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:layout_marginBottom="51dp"
            android:layout_alignBottom="@+id/github"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

</RelativeLayout>
