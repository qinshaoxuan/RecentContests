<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.qsxuan.recentcontests">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="Recent Contests"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="com.qsxuan.recentcontests.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.qsxuan.recentcontests.activity.AboutActivity"
                android:label="关于">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.qsxuan.recentcontests.activity.MainActivity"/>
        </activity>
    </application>

</manifest>